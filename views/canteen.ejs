<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <title>Online Food Payment</title>
  <style>
    body {
      padding-top: 56px; /* Adjusted for the fixed navbar height */
      margin: 0;
    }

    @media (min-width: 768px) {
      body {
        padding-top: 70px; /* Adjusted for the fixed navbar height */
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="#">
      <img src='./logo.png' width="30" height="30" class="d-inline-block align-top" alt="Logo">
      Chalo aab se counter line pay kade math hona
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#" onclick="loadContent('scanner')">Scan</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" onclick="loadContent('recent_scans')">Recent Scans</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" onclick="loadContent('menu_manage')">Menu Manage</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" onclick="loadContent('profile')">Profile</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Main Content Area -->
  <div id="main-content" class="container-fluid">
    <!-- Content will be dynamically loaded here -->
  </div>

  <!-- Bootstrap JS and jQuery (order matters) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <!-- JavaScript for Content Loading -->
  <script>
    function loadContent(page) {
      const contentDiv = document.getElementById('main-content');

      // Fetch the content of the specified page
      fetch(`${page}.ejs`)
        .then(response => response.text())
        .then(html => {
          contentDiv.innerHTML = html;
        })
        .catch(error => console.error('Error loading content:', error));
    }

    // Load the default content (Scan)
    loadContent('scanner');
  </script>

</body>
</html>
